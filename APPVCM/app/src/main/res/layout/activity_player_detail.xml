<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Encabezado del Jugador -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/image_view_avatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_menu_camera"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/dttext_view_apodo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jugador 1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/dttext_view_stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★★★★☆"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>

        <!-- Visión de Conjunto -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VISIÓN DE CONJUNTO"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingTop="16dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/dttext_view_vision_conjunto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4G - 2E - 3P"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/dttext_view_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="44.44% - 22.22% - 33.33%"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:textColor="@android:color/darker_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="8dp" />

        <!-- Palmarés -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PALMARÉS"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingTop="8dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/dttext_view_palmares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 campeonato(s)"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:paddingBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="8dp" />

        <!-- Estadísticas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ESTADÍSTICAS"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingTop="8dp"
            android:textColor="@android:color/black" />

        <!-- Número de partidos jugados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Número de partidos jugados"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/dttext_view_partidos_jugados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Goles a favor por partido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Goles a favor por partido"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/dttext_view_goles_favor_partido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.56"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Goles en contra por partido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Goles en contra por partido"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/dttext_view_goles_contra_partido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.89"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Goles a favor -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Goles a favor"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/dttext_view_goles_favor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Goles en contra -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Goles en contra"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/dttext_view_goles_contra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Diferencia de goles -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Diferencia de goles"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/dttext_view_diferencia_goles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-3"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="8dp" />

        <!-- Histórico -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HISTORICO"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingTop="8dp"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/dttext_view_historico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jugador 1 - 2 Jugador 2"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

            <!-- Puedes agregar más resultados del histórico aquí -->
        </LinearLayout>

    </LinearLayout>
</ScrollView>
