<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="16dp"
    tools:context=".competition.enlinea">

    <!-- Icono y título principal -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:paddingTop="32dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/icon_vcm"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/title_vcm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VCM"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/label_online_competition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Concurso en línea"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Botones para seleccionar Si/No -->
    <LinearLayout
        android:id="@+id/online_competition_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Sí"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_no"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="No" />
    </LinearLayout>

    <!-- Icono de información y texto -->
    <LinearLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/online_competition_buttons"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/info_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_menu_gallery"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If you select no, you will need to enter the number of TVs/pitches you have available for the competition. The schedule generated by the application will fairly distribute each team on the different TVs/pitches available. For example, a 6 players tournament with 2 TVs/pitches, each player will have the same number of matches on TV1/Pitch1 and TV2/Pitch2 (if possible) to be as fair as possible."
            android:textAlignment="center"
            android:padding="8dp"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Botones de navegación -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/next"
        android:background="@color/yelow"
        android:contentDescription="Regresar" />

    <ImageButton
        android:id="@+id/btn_continue"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/next"
        android:background="@color/yelow"
        android:contentDescription="Continuar" />

</RelativeLayout>
