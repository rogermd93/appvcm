<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="16dp"
    tools:context=".competition.ida_vuelta">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:paddingTop="32dp"
        android:paddingBottom="32dp">

        <ImageView
            android:id="@+id/icon_vcm"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/title_vcm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VCM"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/label_match_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ida/Vuelta"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Botones para seleccionar el formato de los partidos -->
    <LinearLayout
        android:id="@+id/match_format_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/btn_ida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ida"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_ida_vuelta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ida/Vuelta" />
    </LinearLayout>

    <!-- Botones de navegaciÃ³n -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/next"
        android:background="@color/yelow"
        android:contentDescription="Regresar" />

    <ImageButton
        android:id="@+id/btn_continue"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/yelow"
        android:src="@drawable/next"
        android:contentDescription="Continuar" />
</RelativeLayout>